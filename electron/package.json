{
  "name": "clearsay-electron",
  "version": "1.0.0",
  "description": "Electron wrapper for ClearSay",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.clearsay.app",
    "asar": true,
    "files": [
      "**/*",
      "../dist/**"
    ],
    "extraResources": [
      {
        "from": "../dist",
        "to": "server",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "target": [
        "dmg"
      ],
      "artifactName": "ClearSay.dmg"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "artifactName": "ClearSay.exe"
    }
  }
}
